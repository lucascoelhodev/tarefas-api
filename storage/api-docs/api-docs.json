{
    "openapi": "3.0.0",
    "info": {
        "title": "Tasks API",
        "description": "API Documentation for tasks management, authentication and importation.",
        "version": "1.0.0"
    },
    "paths": {
        "/api/tasks": {
            "post": {
                "tags": [
                    "Tasks"
                ],
                "summary": "Create a new task",
                "operationId": "643a4fe4ebfaf7a01b95f00a1f76d3d5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "titulo",
                                    "descricao"
                                ],
                                "properties": {
                                    "titulo": {
                                        "type": "string",
                                        "example": "Atualizar Dashboard"
                                    },
                                    "descricao": {
                                        "type": "string",
                                        "example": "Atualizar a dashboard"
                                    },
                                    "status": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Task created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "task": {
                                            "$ref": "#/components/schemas/Task"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "titulo": [
                                                    "The titulo field is required."
                                                ],
                                                "status": [
                                                    "The selected status is invalid."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Task": {
                "title": "Task",
                "description": "Detalhes da Tarefa",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "titulo": {
                        "type": "string",
                        "example": "Atualizar Dashboard"
                    },
                    "descricao": {
                        "type": "string",
                        "example": "Atualizar a dashboard"
                    },
                    "status": {
                        "type": "integer",
                        "example": 1
                    },
                    "status_label": {
                        "type": "string",
                        "example": "Pendente"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Tasks",
            "description": "Tasks"
        }
    ]
}